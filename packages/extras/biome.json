{
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"indentStyle": "space",
			"semicolons": "asNeeded",
			"trailingComma": "all",
			"lineWidth": 100,
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			},
			"correctness": {},
			"suspicious": {
				"noGlobalIsNan": "off",
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off",
				"noAssignInExpressions": "off"
			},
			"complexity": {
				"noUselessConstructor": "off",
				"useLiteralKeys": "off"
			}
		}
	}
}
