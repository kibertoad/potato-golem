{
  "name": "@potato-golem/core",
  "version": "1.0.0",
  "description": "potato golem game lib core",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": [
        "./index.ts"
      ],
      "import": [
        "./index.ts"
      ],
      "require": [
        "./dist/index.js"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "mocha **/*.spec.ts --require ts-node/register",
    "lint": "eslint",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kibertoad/potato-golem.git"
  },
  "author": "kibertoad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kibertoad/potato-golem/issues"
  },
  "homepage": "https://github.com/kibertoad/potato-golem#readme",
  "dependencies": {
    "validation-utils": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.16.19",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1"
  }
}
