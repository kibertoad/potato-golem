{
  "compilerOptions": {

    "target": "es2016",
    "module": "commonjs",

     "declaration": true,
     "declarationMap": true,
     "sourceMap": true,
     "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["./index.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "*.spec.ts"
  ]
}
