{
  "name": "@potato-golem/ui",
  "version": "1.0.0",
  "description": "potato golem game lib UI module",
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./index.ts",
  "exports": {
    ".": {
      "development": {
        "types": "./index.ts",
        "require": "./dist/index.js",
        "import": "./index.ts"
      },
      "production": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.js",
        "import": "./dist/index.js"
      },
      "default": {
        "types": "./index.ts",
        "require": "./dist/index.js",
        "import": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "lint": "biome lint index.ts src biome.json",
    "lint:fix": "biome check --apply index.ts src biome.json",
    "publish-current": "npm publish --access public",
    "publish-minor": "npm version minor && npm run publish-current",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kibertoad/potato-golem.git"
  },
  "author": "kibertoad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kibertoad/potato-golem/issues"
  },
  "homepage": "https://github.com/kibertoad/potato-golem#readme",
  "peerDependencies": {
    "@potato-golem/core": "*"
  },
  "dependencies": {
    "phaser3-rex-plugins": "^1.80.1",
    "validation-utils": "^10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.2",
    "@potato-golem/core": "*",
    "@types/node": "^20.11.30",
    "vitest": "^1.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
